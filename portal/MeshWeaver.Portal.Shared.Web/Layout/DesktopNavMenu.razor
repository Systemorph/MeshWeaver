@using MeshWeaver.ContentCollections
@using Microsoft.AspNetCore.Components.Authorization

<FluentAppBar PopoverShowSearch="false" Class="desktop-nav-menu">
    <FluentAppBarItem Href="/articles" Match="NavLinkMatch.All" IconRest="BlogIcon()"
        IconActive="BlogIcon(active: true)" Text="Blog" />
    <FluentAppBarItem Href="/content/Documentation/Readme.md" Match="NavLinkMatch.All" IconRest="DocumentationIcon()"
        IconActive="DocumentationIcon(active: true)" Text="Areas" />
    <FluentDivider Style="width: 100%;" Role="DividerRole.Presentation"></FluentDivider>
    <FluentAppBarItem Href="/app/Todo/LayoutAreas" Match="NavLinkMatch.All" IconRest="TodoIcon()"
        IconActive="TodoIcon(true)" Text="Todo Areas" />
    <FluentDivider Style="width: 100%;" Role="DividerRole.Presentation"></FluentDivider>
    <FluentAppBarItem Href="/articles/Northwind" Match="NavLinkMatch.All" IconRest="NorthwindIcon()"
        IconActive="NorthwindIcon(true)" Text="Northwind" />
    <FluentAppBarItem Href="/app/Northwind/LayoutAreas" Match="NavLinkMatch.All" IconRest="NorthwindIcon()"
        IconActive="NorthwindIcon(true)" Text="Areas" />
    <FluentDivider Style="width: 100%;" Role="DividerRole.Presentation"></FluentDivider>
    <FluentAppBarItem Href="/chat" Match="NavLinkMatch.All" IconRest="ChatIcon()" IconActive="ChatIcon(true)"
        Text="Chat" />
    <AuthorizeView Roles="@Roles.PortalAdmin">
        <Authorized>
            <FluentAppBarItem Href="/collections" Match="NavLinkMatch.All" IconRest="CollectionsIcon()"
                IconActive="CollectionsIcon(active: true)" Text="Collections" />
        </Authorized>
    </AuthorizeView>

</FluentAppBar>
