@using MeshWeaver.Articles
@using Microsoft.AspNetCore.Components.Authorization

<FluentAppBar PopoverShowSearch="false" Class="desktop-nav-menu">
    <FluentAppBarItem
        Href="/articles"
        Match="NavLinkMatch.All"
        IconRest="ArticlesIcon()"
        IconActive="ArticlesIcon(active: true)"
        Text="Blog" />
    <FluentAppBarItem Href="/content/Documentation/Readme.md"
                      Match="NavLinkMatch.All"
                      IconRest="DocumentationIcon()"
                      IconActive="DocumentationIcon(active: true)"
                      Text="Areas" />
    <AuthorizeView Roles="@Roles.PortalAdmin">
        <Authorized>
            <FluentAppBarItem
                Href="/collections"
                Match="NavLinkMatch.All"
                IconRest="CollectionsIcon()"
                IconActive="CollectionsIcon(active: true)"
                Text="Collections" />
        </Authorized>
    </AuthorizeView>

</FluentAppBar>
