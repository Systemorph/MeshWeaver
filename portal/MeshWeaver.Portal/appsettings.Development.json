{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ArticleCollections": [
    {
      "Name": "Documentation",
      "DisplayName": "Documentation",
      "DefaultAddress": "app/Documentation",
      "BasePath": "../../modules/Documentation/MeshWeaver.Documentation/Markdown"
    }
  ],
  "StreamProviders": {
    "Providers": [
      {
        "Name": "Documentation",
        "ProviderType": "FileSystem",
        "Collections": ["Documentation", "app"],
        "Settings": {
          "BasePath": "../../modules/Documentation/MeshWeaver.Documentation/Markdown"
        }
      },
      {
        "Name": "Northwind",
        "ProviderType": "FileSystem",
        "Collections": ["Northwind", "app"],
        "Settings": {
          "BasePath": "../../modules/Northwind/MeshWeaver.Northwind.Application/Markdown"
        }
      }
    ]
  },
  "EntraId": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "meshweaverportal.onmicrosoft.com", // Your Entra ID tenant domain
    "CallbackPath": "/authentication/login-callback", // Redirect URI path
    "PostLogoutRedirectUri": "/authentication/logout-callback",
    "Scopes": "openid profile email", // Scopes for basic user info
    "Groups": {
      "GroupClaimType": "groups",
      "AllowedGroupIds": []
    }
  }
}
