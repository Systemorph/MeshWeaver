@using Microsoft.Extensions.AI
@using MeshWeaver.AI
@using MeshWeaver.Layout
@using MeshWeaver.Blazor.Components
@using MeshWeaver.Data

<div class="layout-area-message">
    <div class="layout-area-header">
        <div class="layout-area-icon">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 0 1 6 3.75h2.25A2.25 2.25 0 0 1 10.5 6v2.25a2.25 2.25 0 0 1-2.25 2.25H6a2.25 2.25 0 0 1-2.25-2.25V6ZM3.75 15.75A2.25 2.25 0 0 1 6 13.5h2.25a2.25 2.25 0 0 1 2.25 2.25V18a2.25 2.25 0 0 1-2.25 2.25H6A2.25 2.25 0 0 1 3.75 18v-2.25ZM13.5 6a2.25 2.25 0 0 1 2.25-2.25H18A2.25 2.25 0 0 1 20.25 6v2.25A2.25 2.25 0 0 1 18 10.5h-2.25a2.25 2.25 0 0 1-2.25-2.25V6ZM13.5 15.75a2.25 2.25 0 0 1 2.25-2.25H18a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 18 20.25h-2.25A2.25 2.25 0 0 1 13.5 18v-2.25Z" />
            </svg>
        </div>
        <div class="layout-area-title">
            <span>Layout Area: <strong>@LayoutAreaContent.LayoutAreaControl.Reference.Area</strong></span>
            @if (LayoutAreaContent.LayoutAreaControl.Reference.Id != null)
            {
                <span class="layout-area-id"> (ID: @LayoutAreaContent.LayoutAreaControl.Reference.Id)</span>
            }
        </div>
    </div>
    
    <div class="layout-area-content">
        <LayoutAreaView ViewModel="@LayoutAreaContent.LayoutAreaControl" />
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public required ChatLayoutAreaContent LayoutAreaContent { get; set; }
}