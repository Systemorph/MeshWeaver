@using MeshWeaver.Application

<LayoutAreaView ViewModel="@ViewModel" />

@code {
    [Parameter] public string Application { get; set; }
    [Parameter] public string Area { get; set; }
    [Parameter] public string Id { get; set; }

    private LayoutAreaControl ViewModel => new(new ApplicationAddress(Application), new(Area)
    {
        Id = Id
    });
}