
<LayoutAreaView ViewModel="@ViewModel" ShowProgress="@ShowProgress" ProgressMessage="@ProgressMessage"/>

@code {
    [Parameter] public string Address { get; set; }
    [Parameter] public string Area { get; set; }
    [Parameter] public string Id { get; set; }
    [Parameter] public bool ShowProgress { get; set; } = true;
    [Parameter] public string ProgressMessage { get; set; }
    private LayoutAreaControl ViewModel => Controls.LayoutArea(Address, new(Area)
    {
        Id = Id
    });
}