@inherits BlazorView<LayoutAreaDefinitionControl, LayoutAreaDefinitionView>

@{
    var img = GetImageUrl();
    var alt = $"Thumbnail for {ViewModel.Definition.Title}";
}

<a href="@ViewModel.Definition.Url" class="card layout-area-card text-decoration-none">
    <div class="layout-area-card-header">
        <h5 class="layout-area-card-title">@ViewModel.Definition.Title</h5>
    </div>
    <div class="layout-area-card-content">
        <img src="@img" class="layout-area-card-image" alt="@alt" 
             data-thumbnail-base="@(ViewModel.Id?.ToString())" 
             data-area-name="@ExtractAreaName(ViewModel.Definition)">
        <div class="layout-area-card-text">
            <p class="layout-area-card-description">@(ViewModel.Definition.Description ?? "")</p>
        </div>
    </div>
</a>

<script>
(function() {
    // Function to update image source based on dark mode
    function updateImageForDarkMode() {
        const isDarkMode = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches ||
                          document.documentElement.classList.contains('dark') ||
                          document.body.classList.contains('dark') ||
                          document.documentElement.getAttribute('data-theme') === 'dark';
        
        const images = document.querySelectorAll('.layout-area-card-image[data-thumbnail-base][data-area-name]');
        images.forEach(img => {
            const thumbnailBase = img.getAttribute('data-thumbnail-base');
            const areaName = img.getAttribute('data-area-name');
            
            if (thumbnailBase && areaName) {
                const fileName = isDarkMode ? `${areaName}-dark.png` : `${areaName}.png`;
                const newSrc = `${thumbnailBase.replace(/\/$/, '')}/${fileName}`;
                
                if (img.src !== newSrc) {
                    img.src = newSrc;
                }
            }
        });
    }
    
    // Update images on load
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', updateImageForDarkMode);
    } else {
        updateImageForDarkMode();
    }
    
    // Listen for dark mode changes
    if (window.matchMedia) {
        window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', updateImageForDarkMode);
    }
    
    // Also listen for manual theme changes (FluentUI, etc.)
    const observer = new MutationObserver(function(mutations) {
        mutations.forEach(function(mutation) {
            if (mutation.type === 'attributes' && 
                (mutation.attributeName === 'class' || mutation.attributeName === 'data-theme')) {
                updateImageForDarkMode();
            }
        });
    });
    
    observer.observe(document.documentElement, { attributes: true });
    observer.observe(document.body, { attributes: true });
})();
</script>

<style>
