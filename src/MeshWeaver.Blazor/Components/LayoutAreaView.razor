@using MeshWeaver.Layout
@inherits BlazorView<LayoutAreaControl, LayoutAreaView>

<div class="layout-area-container @(IsContentLoaded ? "content-loaded" : "content-loading")">
    <NamedAreaView Stream="@AreaStream" ViewModel="@NamedArea" Area="@NamedArea.GetArea()" Top="@Top" />
</div>

@* Render dialog if one is active *@
@if (showDialog && currentDialog != null)
{
    <DialogView ViewModel="@currentDialog" Area="@DialogControl.DialogArea" Stream="@AreaStream" />
}

@code
{
    [Parameter] public bool Top { get; set; }
}
