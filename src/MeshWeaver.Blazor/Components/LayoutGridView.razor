@using JustifyContent = Microsoft.FluentUI.AspNetCore.Components.JustifyContent
@inherits SkinnedView<LayoutGridControl, LayoutGridSkin, LayoutGridView>

<FluentGrid 
    Class="@Class"
    AdaptiveRendering="@AdaptiveRendering"
    Justify="@JustifyContent"
    Spacing="@Spacing"
>    
    <DispatchView ViewModel="@ViewModel" Stream="@Stream" Area="@Area" />
</FluentGrid>

@code{

    private JustifyContent JustifyContent { get; set; }
    private bool AdaptiveRendering { get; set; }
    private int Spacing { get; set; }
    protected override void BindData()
    {
        base.BindData();
        DataBind(Skin.Justify, x => x.JustifyContent);
        DataBind(Skin.AdaptiveRendering, x => x.AdaptiveRendering);
        DataBind(Skin.Spacing ?? 3, x => x.Spacing);

    }
}