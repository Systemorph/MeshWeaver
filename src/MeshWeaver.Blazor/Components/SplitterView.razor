@using Orientation = Microsoft.FluentUI.AspNetCore.Components.Orientation
@inherits SkinnedView<SplitterControl, SplitterSkin, SplitterView>
@{
    #pragma warning disable FluentMultiSplitter
}

<FluentMultiSplitter 
    Class="@Class"
    Orientation="@Orientation"
    Width="@Width"
    Height="@Height"
    Style="@Style">
    
    <DispatchView ViewModel="@ViewModel" Stream="@Stream" Area="@Area"  />
</FluentMultiSplitter>

@code
{
    private string? Width { get; set; }
    private string? Height { get; set; }
    protected Orientation Orientation { get; set; } = Orientation.Horizontal;

    protected override void BindData()
    {
        base.BindData();
        DataBind(Skin.Width, x => x.Width);
        DataBind(Skin.Height, x => x.Height);
        DataBind(Skin.Orientation, x => x.Orientation);
    }

}
