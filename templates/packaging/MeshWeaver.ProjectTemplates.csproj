<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageType>Template</PackageType>
    <PackageId>MeshWeaver.ProjectTemplates</PackageId>
    <Title>MeshWeaver Project Templates</Title>
    <Authors>Systemorph</Authors>
    <Description>Starter project templates for MeshWeaver applications including Portal structure, Todo modules, AI agents, and testing infrastructure. Ready to be configured with MeshWeaver packages when available.</Description>
    <PackageTags>dotnet-new;templates;meshweaver;portal;todo;ai;web;blazor;starter</PackageTags>
    <TargetFramework>net9.0</TargetFramework>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <NoWarn>$(NoWarn);NU5128</NoWarn>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/Systemorph/MeshWeaver</RepositoryUrl>
    <EnableDefaultContentItems>false</EnableDefaultContentItems>
    <EnableDefaultItems>false</EnableDefaultItems>
    <!-- Set default version if not provided -->
    <Version Condition="'$(Version)' == ''">2.2.0-rc6</Version>
    <PackageVersion Condition="'$(PackageVersion)' == ''">$(Version)</PackageVersion>
  </PropertyGroup>

  <!-- Generate templates before build -->
  <Target Name="GenerateTemplates" BeforeTargets="Build;Pack">
    <Message Text="Starting template generation..." Importance="high" />
    <Exec Command="dotnet run --project &quot;$(MSBuildProjectDirectory)\..\..\tools\MeshWeaver.TemplateGenerator\MeshWeaver.TemplateGenerator.csproj&quot; &quot;$(Version)&quot; &quot;$(MSBuildProjectDirectory)\..\dist\templates&quot;" WorkingDirectory="$(MSBuildProjectDirectory)\..\..\" ContinueOnError="false" />
    <Message Text="Template generation completed." Importance="high" />
  </Target>

  <ItemGroup>
    <None Include="../dist/templates/**/*" Exclude="../dist/templates/**/bin/**;../dist/templates/**/obj/**" Pack="true" PackagePath="content/" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="..\dist\templates\MeshWeaverApp1.Portal\Markdown\Area-Nesting-Bug-Fix.md" />
    <None Remove="..\dist\templates\MeshWeaverApp1.Portal\Markdown\Data-Mesh-Overview.md" />
